{
  "name": "joj-tools",
  "displayName": "JOJ Tools",
  "publisher": "linsyking",
  "description": "Tools Integration for JOJ.",
  "repository": "https://github.com/linsyking/vscode-joj-tools",
  "version": "0.1.2",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:joj-tree",
    "onCommand:joj-tools.refresh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "icon": "$(refresh)",
        "command": "joj-tools.refresh",
        "title": "JOJ Tools: Refresh JOJ"
      },
      {
        "command": "joj-tools.cleanstorage",
        "title": "JOJ Tools: Clean Storage"
      },
      {
        "icon": "$(gear)",
        "command": "joj-tools.reedit",
        "title": "Reset SID"
      },
      {
        "icon": "$(run-all)",
        "command": "joj-tools.submithomework",
        "title": "Submit Homework"
      },
      {
        "icon": "$(info)",
        "command": "joj-tools.viewhomework",
        "title": "View Homework Details"
      },
      {
        "icon": "$(info)",
        "command": "joj-tools.viewquestion",
        "title": "View Question Details"
      },
      {
        "icon": "$(run)",
        "command": "joj-tools.submitquestion",
        "title": "Submit Question"
      },
      {
        "icon": "$(refresh)",
        "command": "joj-tools.refreshquestion",
        "title": "Refresh Questions"
      },
      {
        "icon": "$(refresh)",
        "command": "joj-tools.refreshhomework",
        "title": "Refresh Homeworks"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "joj-tools-viewer",
          "title": "JOJ Tools",
          "icon": "./assets/joj.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "joj-tools.reedit",
          "group": "navigation",
          "when": "view == joj-tree"
        },
        {
          "command": "joj-tools.refresh",
          "group": "navigation",
          "when": "view == joj-tree"
        }
      ],
      "view/item/context": [
        {
          "command": "joj-tools.submithomework",
          "group": "inline",
          "when": "view == joj-tree && viewItem == homework"
        },
        {
          "command": "joj-tools.refreshhomework",
          "group": "inline",
          "when": "view == joj-tree && viewItem == course"
        },
        {
          "command": "joj-tools.refreshquestion",
          "group": "inline",
          "when": "view == joj-tree && viewItem == homework"
        },
        {
          "command": "joj-tools.viewhomework",
          "group": "inline",
          "when": "view == joj-tree && viewItem == homework"
        },
        {
          "command": "joj-tools.viewquestion",
          "group": "inline",
          "when": "view == joj-tree && viewItem == question"
        },
        {
          "command": "joj-tools.submitquestion",
          "group": "inline",
          "when": "view == joj-tree && viewItem == question"
        }
      ]
    },
    "views": {
      "joj-tools-viewer": [
        {
          "id": "joj-tree",
          "name": "JOJ Tree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "axios": "^1.1.0",
    "child_process": "^1.0.2",
    "form-data": "^4.0.0",
    "jsdom": "^20.0.1",
    "zip-a-small-folder": "^0.0.1"
  }
}
